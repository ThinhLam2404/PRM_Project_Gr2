<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:listDivider">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
       
    </style>


    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextColor">@color/custom_bottom_navigation</item>
        <item name="itemIconTint">@color/custom_bottom_ic_navigation</item>
        <item name="android:background">@android:color/white</item>
        <item name="colorOnSurface">@android:color/black</item>
    </style>


    <declare-styleable name="AspectRatioView">
        <attr name="aspectRatioEnabled" format="boolean" />
        <attr name="dominantMeasurement" format="enum">
            <enum name="Width" value="0" />
            <enum name="Height" value="1" />
        </attr>
        <attr name="aspectRatio" format="float" />

        <attr name="cornerRadius" format="dimension" />
        <attr name="roundedCorners">
            <flag name="topLeft" value="1" />
            <flag name="topRight" value="2" />
            <flag name="bottomRight" value="4" />
            <flag name="bottomLeft" value="8" />
            <flag name="all" value="15" />
        </attr>
    </declare-styleable>

    <!-- Custom Ratingbar -->
    <style name="ratingbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/bg_ratingbar</item>
        <item name="android:minHeight">@dimen/define_dimen_32</item>
        <item name="android:maxHeight">@dimen/define_dimen_32</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
    </style>

    <style name="ratingbar2" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/bg_ratingbar_small</item>
        <item name="android:minHeight">@dimen/define_dimen_16</item>
        <item name="android:maxHeight">@dimen/define_dimen_16</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
    </style>
</resources>